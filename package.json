{
  "name": "tomato-clock",
  "version": "6.1.0",
  "description": "Tomato Clock is a simple browser extension for managing your productivity.",
  "main": "src/background.js",
  "scripts": {
    "build": "webpack --mode=production && web-ext build --source-dir ./dist --artifacts-dir ./dist-zip --overwrite-dest",
    "lint": "eslint src",
    "lint-fix": "eslint --fix src",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "webpack --watch",
    "watch-firefox": "web-ext run --source-dir ./dist -f /Applications/Firefox.app/Contents/MacOS/firefox"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/samueljun/tomato-clock.git"
  },
  "keywords": [
    "WebExtension"
  ],
  "author": "Samuel Jun",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/samueljun/tomato-clock/issues"
  },
  "homepage": "https://github.com/samueljun/tomato-clock#readme",
  "dependencies": {
    "bootstrap": "^5.3.8",
    "chart.js": "^4.5.1",
    "core-js": "^3.47.0",
    "daterangepicker": "^3.1.0",
    "jquery": "^3.6.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/eslint-parser": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@eslint/js": "^9.39.1",
    "babel-loader": "^10.0.0",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "html-webpack-plugin": "^5.5.3",
    "prettier": "3.7.4",
    "style-loader": "^4.0.0",
    "web-ext": "^9.2.0",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  },
  "engines": {
    "node": "24"
  },
  "browserslist": [
    "defaults"
  ]
}
